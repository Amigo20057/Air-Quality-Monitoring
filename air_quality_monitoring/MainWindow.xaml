<Window x:Class="air_quality_monitoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:air_quality_monitoring.ViewModel"
        xmlns:local="clr-namespace:air_quality_monitoring"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:air_quality_monitoring.Behaviors"
        Title="Моніторинг якості повітря" Height="450" Width="950">
    
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid
            x:Name="dataGrid"
            ItemsSource="{Binding Measurements}"
            SelectionMode="Extended"
            SelectionUnit="FullRow"
            AutoGenerateColumns="False">
    
            <i:Interaction.Behaviors>
                <behaviors:DataGridSelectedItemsBehavior SelectedItems="{Binding SelectedMeasurements}" />
            </i:Interaction.Behaviors>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Timestamp}" Width="*"/>
                <DataGridTextColumn Header="Локація" Binding="{Binding Location}" Width="*"/>
                <DataGridTextColumn Header="Температура (°C)" Binding="{Binding Temperature}" Width="*"/>
                <DataGridTextColumn Header="Вологість (%)" Binding="{Binding Humidity}" Width="*"/>
                <DataGridTextColumn Header="CO₂ (ppm)" Binding="{Binding CO2Level}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Додати" Command="{Binding AddCommand}" Width="100"/>
            <Button Content="Видалити" Command="{Binding RemoveCommand}" Width="100"/>
            <Button Content="Зберегти" Command="{Binding SaveCommand}" Width="100"/>
            <Button Content="Завантажити" Command="{Binding LoadCommand}" Width="100"/>
            <Button Content="Редагувати" Command="{Binding EditCommand}" Width="100"/>
            <Button Content="Показати графік" Command="{Binding ShowGraphCommand}" Width="150"/>
            <Button Content="Об'єднати записи" Command="{Binding MergeCommand}" Width="150"/>
        </StackPanel>
        <!-- <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0"> -->
        <!-- </StackPanel> -->
    </Grid>
</Window>
