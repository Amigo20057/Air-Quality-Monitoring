<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundColor">#FF1E1E1E</Color>
    <Color x:Key="ForegroundColor">White</Color>

    <SolidColorBrush x:Key="WindowBackground" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="WindowForeground" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="RowBackgroundBrush" Color="#2A2A2A" />
    <SolidColorBrush x:Key="AltRowBackgroundBrush" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ColumnHeaderBackground" Color="#333333"/>
    <SolidColorBrush x:Key="ColumnHeaderForeground" Color="White"/>
    <SolidColorBrush x:Key="ColumnHeaderBorderBrush" Color="#555555"/>
</ResourceDictionary>